{
	"name": "phpgt/promise",
	"description": "Pleasantly work with asynchronous code.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"php-http/httplug": "^2.2.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^v1.8",
		"phpunit/phpunit": "^v9.5"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Promise\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Promise\\Test\\": "./test/phpunit"
		}
	},
	"keywords": [
		"promise",
		"async",
		"asynchronous",
		"concurrent",
		"concurrency",
		"then",
		"deferred",
		"w3c",
		"callback"
	],
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
